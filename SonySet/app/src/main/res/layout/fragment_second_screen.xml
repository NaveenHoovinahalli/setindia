<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <ImageView
        android:id="@+id/side_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sidebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/side_bar"
        android:background="#222222"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/second_screen_header_nine"
            android:background="#222222"
            />


        <ImageView
            android:id="@+id/tv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tv_icon"
            android:layout_below="@+id/top_layout"
            android:padding="10dp"
            android:background="#222222"
            android:layout_toRightOf="@+id/side_bar"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_image"
            android:layout_toRightOf="@+id/side_bar"
            android:background="#222222"
            >

            <TextView
                android:id="@+id/welcome_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/second_screen_txt"
                android:padding="30dp"
                android:textSize="18sp"
                android:background="#222222"
                android:textColor="#999999"
                android:lineSpacingExtra="7dp"
                android:layout_centerHorizontal="true"/>

        </ScrollView>

        </LinearLayout>


</RelativeLayout>