<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#191919"
    >
    <!--android:padding="8dp"-->


    <!--android:background="@drawable/expandable_group_selection"-->

    <ImageView
        android:id="@+id/expandableplusminus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_square_plus"
        />

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shows_sel"
        android:scaleType="fitXY"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:layout_centerVertical="true"
        />

    <View
        android:id="@+id/colorcodemenu"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/expandableplusminus"
        android:layout_alignBottom="@+id/expandableplusminus"
        />

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/menuImage"
        android:layout_centerVertical="true"
        android:text="Test"
        />

    <CheckBox
        android:id="@+id/myCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menuImage"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>

    <!--android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"-->
    <!--android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"-->

