<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/promo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        />

    <ImageView android:id="@+id/placeHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/promo_gradient"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/titleMargin"
        android:layout_marginLeft="10dp">

        <com.teli.sonyset.views.SonyTextView
            android:id="@+id/promo_title"
            style="@style/textView"
            android:textSize="16sp"
            android:layout_above="@+id/promo_name"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/promo_name"
            style="@style/textView"
            android:layout_marginBottom="30dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            />

    </LinearLayout>
    <ImageView android:id="@+id/play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/play_btn_big"
        android:layout_marginTop="@dimen/titleMargin"
        android:layout_marginRight="10dp"/>

</RelativeLayout>